<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_pos_mrp" model="ir.ui.view">
        <field name="name">product.template.form.pos.mrp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block" invisible="type == 'service'">
                    <field name="mrp_from_pos"/>
                    <label for="mrp_from_pos"/>
                </span>
            </xpath>
        </field>
    </record>

</odoo>
